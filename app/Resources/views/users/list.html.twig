{% extends 'base.html.twig' %}

{% block body %}
    <h1 class='page-header'>List of users</h1>

    <table class='table table-hover table-condensed'>
        <thead>
            <tr>
                <th>Username</th>
                <th>Full Name</th>
                <th>Description</th>
                <th>UID</th>
                <th>Commands</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('users_show', { 'username': user.username }) }}">{{ user.username }}</a></td>
                <td>{{ user.name }}</td>
                <td>{{ user.description }}</td>
                <td>{{ user.uid }}</td>
                <td>
                    <a class="btn btn-success" href="{{path('users_show', { 'username': user.username })}}">Details</a>
                    <a class="btn btn-danger" href="{{path('users_delete', { 'username': user.username })}}">Delete</a>                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <hr>
    <a class="btn btn-default" href="{{path('users_create')}}">Add User</a>    
    <hr>

{% endblock %}
