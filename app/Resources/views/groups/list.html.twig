{% extends 'base.html.twig' %}

{% block body %}
    <h1 class='page-header'>List of groups</h1>

    <table class='table table-hover table-condensed'>
        <thead>
            <tr>
                <th>Group</th>
                <th>GID</th>
                <th>Description</th>
                <th>Commands</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td><a href="{{ path('groups_show', { 'name': group.name }) }}">{{ group.name }}</a></td>
                <td>{{ group.gid }}</td>
                <td>{{ group.description }}</td>
                <td>
                    <a class="btn btn-success" href="{{path('groups_show', { 'name': group.name })}}">Details</a>
                    <a class="btn btn-danger" href="{{path('groups_delete', { 'name': group.name })}}">Delete</a>                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <hr>
    <a class="btn btn-default" href="{{path('groups_create')}}">Add Group</a>    
    <hr>

{% endblock %}
